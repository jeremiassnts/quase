{ potenciação }
função real potenciacao (real base, int potencia)
    se (poténcia == 0) então 1.0
    senão base * potenciacao(base, potencia - 1)
{ fatorial }
função int fatorial (int n)
    se (n == 0) então 1
    senão n * fatorial(n - 1)
{ área de retângulo }
função real area_retangulo (real lado_a, real lado_b)
    lado_a * lado_b
{ área de círculo }
função real area_circulo (real raio)
    começa
    cons real pi := 3.14;
    pi * raio * raio
    termina